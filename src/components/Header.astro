---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"

import Button from "./Button.astro";
---

<header x-data="{ showmenu: false }" class="bg-black text-beige-light">
  <div id="navbar" class="container mx-auto p-4 px-8 flex flex-row justify-between items-center">
    <div id="logo" class=""><img src="/imgs/logo.svg" alt="" class="w-10" /></div>
    <nav id="desktopmenu" class="hidden lg:block">
      <ul class="flex flex-row gap-4">
        <li class="hover:cursor-pointer place-content-center"><a href="/" class={currentPath}>Højskoleophold</a></li>
        <li class="hover:cursor-pointer place-content-center"><a href="/" class={currentPath}>Sommerhøjskole</a></li>
        <li class="hover:cursor-pointer place-content-center"><a href="/" class={currentPath}>Priser</a></li>
        <li class="hover:cursor-pointer place-content-center"><a href="/" class={currentPath}>Om os</a></li>
        <li class="hover:cursor-pointer place-content-center"><a href="/" class={currentPath}><Button variant="orange" size="small">infomøder</Button></a></li>
        <li class="hover:cursor-pointer"><a href="/" class={currentPath}><Button variant="beige" size="small">Tilmeld</Button></a></li>
      </ul>
    </nav>
    <button id="burgermenu" class="lg:hidden" x-on:click="showmenu = ! showmenu"
      ><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
      </svg>
    </button>
  </div>
  <nav id="mobilmenu" class="flex flex-col content-center" x-show="showmenu" x-transition x-on:click="showmenu = false" x-on:click.outside="showmenu = false">
    <ul class="border-t-2 border-b-2 border-black m-auto text-center flex flex-col gap-5 mb-6">
      <li class="hover:cursor-pointer place-content-center"><a href="/" class={currentPath}>Højskoleophold</a></li>
      <li class="hover:cursor-pointer place-content-center"><a href="/" class={currentPath}>Sommerhøjskole</a></li>
      <li class="hover:cursor-pointer place-content-center"><a href="/" class={currentPath}>Priser</a></li>
      <li class="hover:cursor-pointer place-content-center"><a href="/" class={currentPath}>Om os</a></li>
      <li class="hover:cursor-pointer place-content-center"><a href="/" class={currentPath}><Button variant="orange" size="small">infomøder</Button></a></li>
      <li class="hover:cursor-pointer"><a href="/" class={currentPath}><Button variant="beige" size="small">Tilmeld</Button></a></li>
    </ul>
  </nav>
</header>
